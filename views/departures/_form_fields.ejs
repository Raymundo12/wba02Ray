<div class="form-goup">
    <label for="title">Title</label>
    <input required value="<%= departures.title %>"  type="text" name="title" id="title" class="form-control">
</div>
<div class="form-goup">
    <label for="description">Description</label>
    <textarea name="description" id="description" class="form-control"><%= departures.description %></textarea>
</div>
<div class="form-goup">
    <label for="markdown">Markdown</label>
    <textarea required name="markdown" id="markdown" class="form-control"><%= departures.markdown %></textarea>
</div>        

<a href="/" class="btn btn-secondary">Cancel</a>
<button type="submit" class="btn btn-primary">Save</button>
